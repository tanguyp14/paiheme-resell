{{ 'component-card.css' | asset_url | stylesheet_tag }}

<div class="product-list">
  <h2>{{ section.settings.section_title }}</h2>

  {% for product in collections.all.products %}
    <div class="product-item">
      <div class="card">
        <a href="{{ product.url }}">
          <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}" class="card-img-top">
        </a>
        <div class="card-body">
          <h5 class="card-title">
            <a href="{{ product.url }}">{{ product.title }}</a>
          </h5>

          {% if product.variants.size > 1 %}
            <form class="variant-form">
              <select class="variant-dropdown" name="id">
                {% for variant in product.variants %}
                  <option value="{{ variant.id }}">{{ variant.title }} - {{ variant.price | money }}</option>
                {% endfor %}
              </select>
              <input type="hidden" name="quantity" value="1">
              {% if product.available %}
                <button type="button" class="btn product-form__cart-submit add-to-cart-btn" data-action="add-to-cart">
                  <span class="btn__text">{{ 'products.product.add_to_cart' | t }}</span>
                </button>
              {% else %}
                <span class="btn product-form__cart-submit btn--sold-out">
                  {{ 'products.product.sold_out' | t }}
                </span>
              {% endif %}
            </form>
          {% else %}
            <form class="variant-form">
              <input type="hidden" name="id" value="{{ product.variants[0].id }}">
              <input type="hidden" name="quantity" value="1">
              {% if product.available %}
                <button type="button" class="btn product-form__cart-submit add-to-cart-btn" data-action="add-to-cart">
                  <span class="btn__text">{{ 'products.product.add_to_cart' | t }}</span>
                </button>
              {% else %}
                <span class="btn product-form__cart-submit btn--sold-out">
                  {{ 'products.product.sold_out' | t }}
                </span>
              {% endif %}
            </form>
          {% endif %}

          <!-- Ajoutez d'autres informations sur le produit ici -->
        </div>
      </div>
    </div>
  {% endfor %}
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var addToCartButtons = document.querySelectorAll('.add-to-cart-btn');

    addToCartButtons.forEach(function (button) {
      button.addEventListener('click', function () {
        var form = button.closest('.variant-form');
        var formData = new FormData(form);

        fetch('/cart/add.js', {
          method: 'POST',
          body: formData,
          credentials: 'same-origin',
          headers: {
            Accept: 'application/json',
            'X-Requested-With': 'xmlhttprequest',
          },
        })
          .then(function (response) {
            return response.json();
          })
          .then(function (data) {
            // Mettez à jour le nombre d'articles dans le panier visuellement
            updateCartCountBubble(data.item_count);

            // Vous pouvez également effectuer d'autres actions ici en fonction de vos besoins
          })
          .catch(function (error) {
            console.error('Error:', error);
          });
      });
    });

    function updateCartCountBubble(count) {
      // Mettez à jour le contenu de toutes les balises ayant la classe "cart-count-bubble"
      var cartCountBubbles = document.getElementsByClassName('cart-count-bubble');

      for (var i = 0; i < cartCountBubbles.length; i++) {
        cartCountBubbles[i].innerText = count;
      }
    }
  });
</script>

{% schema %}
{
  "name": "Product List",
  "settings": [
    {
      "type": "text",
      "label": "Titre de la section",
      "id": "section_title",
      "default": "Liste de produits"
    },
    {
      "type": "checkbox",
      "label": "Afficher le prix",
      "id": "show_price",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom"
    }
  ]
}
{% endschema %}
