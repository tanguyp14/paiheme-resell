<!-- product-list.liquid -->

<div class="product-list">
  <h2>{{ section.settings.section_title }}</h2>
  
  {% for product in collections.all.products %}
    <div class="product-item">
      <div class="card">
        <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}" class="card-img-top">
        <div class="card-body">
          <h5 class="card-title">{{ product.title }}</h5>
          {% if section.settings.show_price %}
            <p class="card-text">{{ product.price | money }}</p>
          {% endif %}
          <!-- Ajoutez d'autres informations sur le produit ici -->
        </div>
      </div>
    </div>
  {% endfor %}
</div>



{% schema %}
{
    "name": "Product List",
  "settings": [
    {
      "type": "text",
      "label": "Titre de la section",
      "id": "section_title",
      "default": "Liste de produits"
    },
    {
      "type": "checkbox",
      "label": "Afficher le prix",
      "id": "show_price",
      "default": true
    }
    // Ajoutez d'autres options de configuration selon vos besoins
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom"
  
}
]
}

{% endschema %}
